local TweenService = game:GetService("TweenService")
local Player = game:GetService("Players").LocalPlayer
local CoreGui = game:GetService("CoreGui")

local Fun = {}
local Container = Instance.new("ScreenGui")
Container.Name = "FunNotification"
Container.Parent = CoreGui

local Holder = Instance.new("Frame")
Holder.Name = "Holder"
Holder.BackgroundTransparency = 1
Holder.Size = UDim2.new(0, 320, 1, 0)
Holder.Position = UDim2.new(0, 20, 0, 100)
Holder.Parent = Container

local UIList = Instance.new("UIListLayout")
UIList.Parent = Holder
UIList.SortOrder = Enum.SortOrder.LayoutOrder
UIList.Padding = UDim.new(0, 10)

local Icons = {
    Success = "rbxassetid://12900311398",
    Warning = "rbxassetid://85147473315465",
    Error   = "rbxassetid://11537790652",
    Info    = "rbxassetid://92726475245140"
}

local TweenIn = TweenInfo.new(0.5, Enum.EasingStyle.Quad, Enum.EasingDirection.Out)
local TweenOut = TweenInfo.new(0.5, Enum.EasingStyle.Quad, Enum.EasingDirection.In)

function Fun:Notify(Properties)
    local Type = Properties.Type or "Info"
    local Message = Properties.Message or "Notification"
    local Duration = Properties.Duration or 5

    local Frame = Instance.new("Frame")
    Frame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
    Frame.Size = UDim2.new(0, 300, 0, 60)
    Frame.Position = UDim2.new(-1, -320, 0, 0)
    Frame.Parent = Holder
    Frame.BackgroundTransparency = 0.1
    Frame.BorderSizePixel = 0

    local UICorner = Instance.new("UICorner")
    UICorner.CornerRadius = UDim.new(0, 8)
    UICorner.Parent = Frame

    local Icon = Instance.new("ImageLabel")
    Icon.Image = Icons[Type] or Icons["Info"]
    Icon.Size = UDim2.new(0, 40, 0, 40)
    Icon.Position = UDim2.new(0, 10, 0.5, -20)
    Icon.BackgroundTransparency = 1
    Icon.Parent = Frame

    local Text = Instance.new("TextLabel")
    Text.Text = Message
    Text.Size = UDim2.new(1, -60, 1, 0)
    Text.Position = UDim2.new(0, 60, 0, 0)
    Text.BackgroundTransparency = 1
    Text.TextColor3 = Color3.fromRGB(255, 255, 255)
    Text.TextWrapped = true
    Text.TextScaled = true
    Text.Font = Enum.Font.Gotham
    Text.Parent = Frame

    TweenService:Create(Frame, TweenIn, {Position = UDim2.new(0, 0, 0, 0)}):Play()

    task.delay(Duration, function()
        local Tween = TweenService:Create(Frame, TweenOut, {Position = UDim2.new(-1, -320, 0, Frame.Position.Y.Offset)})
        Tween:Play()
        Tween.Completed:Connect(function()
            Frame:Destroy()
        end)
    end)
end

return Fun
